      %section#footer.footer-section.section
        .container
          %h3.footer-logo
            {{ 'logos/footer-logo.png' | theme_image_tag }}
          .footer-socmed
            %a{:href => "https://www.facebook.com/myrickconsulting", :target => "_blank"}
              %span.fa.fa-facebook
            %a{:href => "https://twitter.com/Myrickadv", :target => "_blank"}
