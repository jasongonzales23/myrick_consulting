      %section#closing.closing-section.section-dark.section
        .section-background
          / IMAGE BACKGROUND
          .section-background-image.parallax{"data-stellar-ratio" => "0.4"}
            {{ 'contents/step-1.jpg' | theme_image_tag: 'class:opacity-015' }}
        .container
          %h3.closing-shout Ready to start? Take the first step by contacting us!
          .closing-buttons{"data-animation" => "tada"}
            %a.anchor-link.btn.btn-lg.btn-primary{:href => "#contact-maps"} Contact Us
